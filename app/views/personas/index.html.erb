<p id="notice"><%= notice %></p>

<h1>Personas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Proyectos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.name %></td>
        <td>
          <% persona.proyectos.each do |proyecto| %>

            <%= proyecto.title %><a href="<%= remove_proyect_persona_path(persona, proyecto )%>" data-method="delete" >
              <span class="badge">X</span></a>
          <% end %>

          <%= form_tag(add_proyect_persona_path(persona)) do %>
          <%= text_field_tag "name" %>
      <% end %>
      </td>
      <td><%= link_to 'Mostrar Proyectos', persona %></td>
      <td><%= link_to 'Editar nombre', edit_persona_path(persona) %></td>
      <td><%= link_to 'Eliminar personas', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br>

<%= link_to 'New Persona', new_persona_path %>
